import React, { useState } from 'react';
import { useNavigate } from 'react-router-dom';
import axios from 'axios';

const API_URL = 'http://localhost:3001/api';

const POPULAR_PLAYERS = [
  { username: 'zi8gzag', description: 'World Champion' },
  { username: 'blinky', description: 'Top Competitor' },
  { username: 'Rainbolt', description: 'Geography Legend' },
  { username: 'GeoPeter', description: 'Elite Player' },
  { username: 'GeoStique', description: 'Pro Streamer' },
  { username: 'Chicago Geographer', description: 'US Expert' },
];

function Home() {
  const [searchUsername, setSearchUsername] = useState('');
  const [searching, setSearching] = useState(false);
  const [error, setError] = useState(null);
  const [addingPlayer, setAddingPlayer] = useState(null);
  const navigate = useNavigate();

  const handleSearch = async (e) => {
    e.preventDefault();
    if (!searchUsername.trim()) return;

    setSearching(true);
    setError(null);

    try {
      const response = await axios.post(`${API_URL}/players/search`, {
        username: searchUsername.trim()
      });

      // Navigate to player detail regardless of whether they were already tracked
      navigate(`/player/${response.data.player.id}`);
    } catch (err) {
      if (err.response?.status === 404) {
        setError(`Player "${searchUsername}" not found on GeoGuessr`);
      } else {
        setError('Failed to search player. Please try again.');
      }
    } finally {
      setSearching(false);
      setSearchUsername('');
    }
  };

  const addPopularPlayer = async (username) => {
    setAddingPlayer(username);
    setError(null);

    try {
      const response = await axios.post(`${API_URL}/players/search`, { username });
      
      // Navigate to player whether they were already tracked or just added
      navigate(`/player/${response.data.player.id}`);
    } catch (err) {
      setError(`Failed to load ${username}`);
      console.error(err);
    } finally {
      setAddingPlayer(null);
    }
  };

  return (
    <div className="max-w-5xl mx-auto">
      {/* Hero Section */}
      <div className="text-center mb-16 animate-fadeIn">
        <h1 className="text-5xl font-bold mb-4 text-gray-900">
          Track GeoGuessr Performance
        </h1>
        <p className="text-lg text-gray-600 mb-8">
          Monitor competitive ratings, analyze trends, and compare players
        </p>
        
        {/* Search Section */}
        <form onSubmit={handleSearch} className="max-w-xl mx-auto">
          <div className="flex gap-3">
            <input
              type="text"
              value={searchUsername}
              onChange={(e) => setSearchUsername(e.target.value)}
              placeholder="Search any player..."
              className="input-field"
              disabled={searching}
            />
            <button
              type="submit"
              disabled={searching || !searchUsername.trim()}
              className="px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-xl hover:from-indigo-600 hover:to-purple-600 disabled:opacity-50 disabled:cursor-not-allowed transition-all font-semibold shadow-lg shadow-indigo-500/20 btn-press hover:shadow-indigo-500/40"
            >
              {searching ? (
                <span className="flex items-center gap-2">
                  <span className="animate-pulse-slow">üîç</span> Searching...
                </span>
              ) : (
                'Search'
              )}
            </button>
          </div>
        </form>

        {error && (
          <div className="mt-4 max-w-2xl mx-auto bg-red-900/20 border border-red-500/50 rounded-lg p-4 text-center">
            <p className="text-red-400">{error}</p>
          </div>
        )}
      </div>

      {/* Popular Players Section */}
      <div className="mb-12 animate-fadeIn" style={{ animationDelay: '0.4s' }}>
        <h2 className="text-3xl font-bold text-white mb-6 text-center">
          Popular Players
        </h2>
        <p className="text-center text-gray-400 mb-6">
          Quick access to well-known GeoGuessr players
        </p>
        
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {POPULAR_PLAYERS.map((player, idx) => (
            <button
              key={player.username}
              onClick={() => addPopularPlayer(player.username)}
              disabled={addingPlayer === player.username}
              className="glass rounded-xl hover:border-indigo-500 p-6 text-left transition-all group disabled:opacity-50 card-hover animate-fadeIn"
              style={{ animationDelay: `${0.5 + idx * 0.05}s` }}
            >
              <div className="flex items-start justify-between mb-2">
                <div>
                  <h3 className="text-lg font-bold text-white group-hover:text-indigo-400 transition-colors">
                    {player.username}
                  </h3>
                  <p className="text-sm text-gray-400">{player.description}</p>
                </div>
                <div className="text-2xl">
                  {addingPlayer === player.username ? '‚è≥' : '‚ûï'}
                </div>
              </div>
            </button>
          ))}
        </div>
      </div>

      {/* Features Grid */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div className="glass rounded-xl p-6 text-center card-hover animate-fadeIn" style={{ animationDelay: '0.8s' }}>
          <div className="text-5xl mb-3 transform transition-transform group-hover:scale-110">üìä</div>
          <h3 className="text-lg font-semibold text-white mb-2">Auto Tracking</h3>
          <p className="text-sm text-gray-400">Ratings updated every hour automatically</p>
        </div>
        
        <div className="glass rounded-xl p-6 text-center card-hover animate-fadeIn" style={{ animationDelay: '0.9s' }}>
          <div className="text-5xl mb-3 transform transition-transform group-hover:scale-110">üìà</div>
          <h3 className="text-lg font-semibold text-white mb-2">History Charts</h3>
          <p className="text-sm text-gray-400">Visualize rating progression over time</p>
        </div>
        
        <div className="glass rounded-xl p-6 text-center card-hover animate-fadeIn" style={{ animationDelay: '1s' }}>
          <div className="text-5xl mb-3 transform transition-transform group-hover:scale-110">‚öîÔ∏è</div>
          <h3 className="text-lg font-semibold text-white mb-2">Compare Players</h3>
          <p className="text-sm text-gray-400">Side-by-side player comparison</p>
        </div>
      </div>
    </div>
  );
}

export default Home;
